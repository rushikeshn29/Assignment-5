{{>header}}
<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        /* Style all input fields */
        input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
        }
        /* Style the submit button */
        input[type=submit] {
            background-color: #fbfdfc;
            color: rgb(8, 8, 8);
            border: 2px solid lightgreen;
        }
        input[type=submit]:hover{
            background-color: lightgreen;
        }
    </style>
</head>

<body>

    <h3 class="text-center bg-dark text-white py-3">Reset Passowrd</h3>


    <div class="container">
        <form action="/reset" method="post">
            {{#if errmsg}}
            <div class="alert alert-danger">{{errmsg}}</div>
            {{/if}}
            {{#if succmsg}}
            <div class="alert alert-success">{{succmsg}}</div>
            {{/if}}
            <label for="pass">Email</label>
            <input type="email" id="usrname" name="email1" placeholder="Enter your registred Email id" required>
            <input type="submit" class="btnn" value="Reset">
        </form>
    </div>
    {{>footer}}

</body>

</html>